<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!--  not my proudest layout  -->

    <ProgressBar
        android:id="@+id/progressBar"
        tools:visibility="visible"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewStatus"
        app:drawableTint="@color/purple_800"
        tools:text="Status: Active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_outline_details"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/layoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingBottom="5dp"
            android:text="@string/RequestDetails.Label.Name"
            android:textColor="@color/purple_800"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewName"
            app:drawableTint="@color/purple_800"
            tools:text="Urke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_outline_details"
            android:drawableStart="@drawable/ic_baseline_person"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingBottom="5dp"
            android:text="@string/RequestDetails.Label.Contact"
            android:textColor="@color/purple_800"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layoutContact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_outline_details">

            <TextView
                android:id="@+id/textViewPhone"
                app:drawableTint="@color/purple_800"
                tools:text="065 000 111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:drawableStart="@drawable/ic_baseline_phone"
                android:drawablePadding="16dp"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingBottom="5dp"
            android:text="@string/RequestDetails.Label.Address"
            android:textColor="@color/purple_800"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewAddress"
            app:drawableTint="@color/purple_800"
            tools:text="Takovska 11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_outline_details"
            android:drawableStart="@drawable/ic_baseline_pin_drop"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingBottom="5dp"
            android:text="@string/RequestDetails.Label.Details"
            android:textColor="@color/purple_800"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewDetails"
            tools:text="Lorem ipsum sit dolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_outline_details"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
